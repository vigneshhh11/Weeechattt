<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WeeeChattt</title>
    <style>
        body {
            background-color: black;
            color: green;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        #chat {
            border: 1px solid green;
            padding: 10px;
            height: 300px;
            width: 90%;
            overflow-y: scroll;
            margin-bottom: 10px;
        }
        #message {
            width: 80%;
            padding: 5px;
            margin-right: 5px;
        }
        button {
            padding: 5px 10px;
            background-color: green;
            color: black;
            border: none;
            cursor: pointer;
        }
        button:disabled {
            background-color: grey;
        }
        #status {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>WeeeChattt</h1>
    <div id="loginArea">
        <input type="text" id="username" placeholder="Username" />
        <input type="password" id="password" placeholder="Password" />
        <button id="login">Login</button>
    </div>
    <div id="chatArea" style="display:none;">
        <div id="status">Waiting for the other person...</div>
        <div id="chat"></div>
        <input type="text" id="message" placeholder="Type a message..." disabled />
        <button id="send" disabled>Send</button>
    </div>
    <script>
        let loggedIn = false;
        let otherUserOnline = false; // Track if the other user is online
        const chatDiv = document.getElementById('chat');
        const statusDiv = document.getElementById('status');
        document.getElementById('login').onclick = () => {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            // Basic validation for demonstration
            if (username && password) {
                loggedIn = true;
                document.getElementById('loginArea').style.display = 'none';
                document.getElementById('chatArea').style.display = 'block';
                document.getElementById('message').disabled = false;
                document.getElementById('send').disabled = false;
                // Simulate checking for the other user's online status
                setTimeout(() => {
                    otherUserOnline = true; // Simulate the other user coming online
                    updateStatus();
                }, 3000); // Simulate a delay for the other user to come online
                chatDiv.innerHTML += `<p>${username} has joined the chat.</p>`;
                updateStatus();
            } else {
                alert("Please enter both username and password.");
            }
        };
        document.getElementById('send').onclick = () => {
            if (loggedIn) {
                const message = document.getElementById('message').value;
                if (message) {
                    chatDiv.innerHTML += `<p>${document.getElementById('username').value}: ${message}</p>`;
                    document.getElementById('message').value = '';
                }
            }
        };
        function updateStatus() {
            if (otherUserOnline) {
                statusDiv.innerText = "The other person is online.";
            } else {
                statusDiv.innerText = "Waiting for the other person...";
            }
        }
    </script>
</body>
</html>
